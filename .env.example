# Server
PORT=4000
DATABASE_URL=postgresql://user:password@host:5432/dbname
PGSSLMODE=require
JWT_SECRET=change_me

# Client
NEXT_PUBLIC_API_URL=http://localhost:4000

# Polar API
POLAR_CLIENT_ID=your_polar_client_id
POLAR_CLIENT_SECRET=your_polar_client_secret
POLAR_REDIRECT_URI=http://localhost:4000/api/v1/integrations/polar/callback

# Garmin API (redirect_uri must be deployed URL; localhost not supported)
GARMIN_CLIENT_ID=your_garmin_client_id
GARMIN_CLIENT_SECRET=your_garmin_client_secret
GARMIN_REDIRECT_URI=https://your-backend.onrender.com/api/v1/integrations/garmin/callback

# App URLs
APP_BASE_URL=http://localhost:3000

# Nodemailer
MAIL_USER=your_email@example.com
MAIL_PASS=your_email_password

# OpenAI API
OPENAI_API_KEY=your_openai_api_key